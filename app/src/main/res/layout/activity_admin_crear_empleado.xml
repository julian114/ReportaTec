<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/background_light"
    tools:context="itchetumal.edu.mx.dadm.reportatec.AdminCrearEmpleados">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:orientation="vertical"
        android:paddingTop="5dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/TextoPlanoTitulo"
                    android:layout_width="276dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center"
                    android:text="Administrar empleados"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/TextoPlanoIdAdminCrearEmpleados"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/spinnerFragmeno4EstadoDelReporte"
                        android:text="# ID : "
                        android:textColor="@android:color/background_dark"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/editTextIdAdminCrearEmpleados"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/textView2"
                        android:layout_weight="1"
                        android:contentDescription="nombre de usuario"
                        android:ems="10"
                        android:hint="ID"
                        android:inputType="text"
                        android:textColor="@android:color/darker_gray" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/TextoPlanoNumCtrlAdminCrearEmpleados"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/spinnerFragmeno4EstadoDelReporte"
                        android:text="Num ctrl  : "
                        android:textColor="@android:color/background_dark"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/editTextNumCtrlAdminCrearEmpleados"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/textView2"
                        android:layout_weight="1"
                        android:contentDescription="nombre de usuario"
                        android:ems="10"
                        android:hint="Num ctrl"
                        android:inputType="text"
                        android:textColor="@android:color/darker_gray" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/TextoPlanoNombresAdminCrearEmpleados"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/spinnerFragmeno4EstadoDelReporte"
                        android:text="Nombres  : "
                        android:textColor="@android:color/background_dark"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/editTextNombresAdminCrearEmpleados"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/textView2"
                        android:layout_weight="1"
                        android:contentDescription="nombre de usuario"
                        android:ems="10"
                        android:hint="Nombres"
                        android:inputType="text"
                        android:textColor="@android:color/darker_gray" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/TextoPlanoCorreoAdminCrearEmpleados"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/spinnerFragmeno4EstadoDelReporte"
                        android:text="Correo  : "
                        android:textColor="@android:color/background_dark"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/editTextCorreoAdminCrearEmpleados"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/textView2"
                        android:layout_weight="1"
                        android:contentDescription="nombre de usuario"
                        android:ems="10"
                        android:hint="Correo"
                        android:inputType="textEmailAddress"
                        android:textColor="@android:color/darker_gray" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/TextoPlanoUsuarioAdminCrearEmpleados"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/spinnerFragmeno4EstadoDelReporte"
                        android:text="Usuario  : "
                        android:textColor="@android:color/background_dark"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/editTextUsuarioAdminCrearEmpleados"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/textView2"
                        android:layout_weight="1"
                        android:contentDescription="nombre de usuario"
                        android:ems="10"
                        android:hint="Usuario"
                        android:inputType="text"
                        android:textColor="@android:color/darker_gray" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/TextoPlanoContraseñaAdminCrearEmpleados"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/spinnerFragmeno4EstadoDelReporte"
                        android:text="Contraseña  : "
                        android:textColor="@android:color/background_dark"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/editTextContraseñaAdminCrearEmpleados"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/textView2"
                        android:layout_weight="1"
                        android:contentDescription="nombre de usuario"
                        android:ems="10"
                        android:hint="Contraseña"
                        android:inputType="text"
                        android:textColor="@android:color/darker_gray" />

                </LinearLayout>

                <TextView
                    android:id="@+id/TextoPlanoDescripcion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/mySpinner3"
                    android:text="Tipo de permiso :"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

                <RadioGroup
                    android:id="@+id/radioGr"
                    android:layout_width="match_parent"
                    android:layout_height="108dp">

                    <RadioButton
                        android:id="@+id/radioButtonJefeAdminCrearEmpleados"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Jefe" />

                    <RadioButton
                        android:id="@+id/radioButtonSubjefeAdminCrearEmpleados"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Subjefe" />

                    <RadioButton
                        android:id="@+id/radioButtonEmpleadoAdminCrearEmpleados"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Empleado" />

                </RadioGroup>

                <TextView
                    android:id="@+id/textoPlanoAnuncio"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/mySpinner"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnBuscarAdminCrearEmpleados"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/holo_green_dark"
                        android:text="BUSCAR"
                        android:textColor="@android:color/background_light" />

                    <Button
                        android:id="@+id/btnActualizarAdminCrearEmpleados"
                        android:layout_width="134dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/holo_blue_dark"
                        android:text="ACTUALIZAR"
                        android:textColor="@android:color/background_light" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnEliminarAdminCrearEmpleados"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/holo_red_dark"
                        android:text="Eliminar"
                        android:textColor="@android:color/background_light" />

                    <Button
                        android:id="@+id/btnEnviarReporte0Limpieza"
                        android:layout_width="134dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/colorPrimary"
                        android:text="CREAR"
                        android:textColor="@android:color/background_light" />
                </LinearLayout>


            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>
